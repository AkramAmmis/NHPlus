<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hitec.nhplus.controller.AllCaregiverController">
    <center>
        <TableView fx:id="tableView" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="columnId" prefWidth="40.0" text="ID" />
                <TableColumn fx:id="columnFirstName" onEditCommit="#handleOnEditFirstname" prefWidth="120.0" text="Vorname" />
                <TableColumn fx:id="columnSurname" onEditCommit="#handleOnEditSurname" prefWidth="120.0" text="Nachname" />
                <TableColumn fx:id="columnTelephone" onEditCommit="#handleOnEditTelephone" prefWidth="120.0" text="Telefon" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <VBox BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" spacing="5.0">
                <Button fx:id="buttonDelete" onAction="#handleDelete" text="Löschen" />
                <Button fx:id="buttonChangePassword" onAction="#handleChangePassword" text="Passwort ändern" />
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </HBox>
            <HBox fx:id="addBox" alignment="CENTER" spacing="5.0">
                <TextField fx:id="textFieldFirstName" promptText="Vorname" />
                <TextField fx:id="textFieldSurname" promptText="Nachname" />
                <TextField fx:id="textFieldTelephone" promptText="Telefon" />
                <Button fx:id="buttonAdd" onAction="#handleAdd" text="Hinzufügen" />
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </HBox>
        </VBox>
    </bottom>
    <top>
        <HBox fx:id="toolbar" alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <Label text="Pfleger" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
</BorderPane>
